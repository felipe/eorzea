{
  "name": "eorzea",
  "version": "0.1.0",
  "description": "FFXIV Game Data Assistant - Comprehensive offline-first companion tool with items, crafting, gathering, quests, and collectibles tracking",
  "type": "module",
  "main": "src/cli.ts",
  "bin": "./bin/eorzea.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "tsx src/cli.ts",
    "web": "tsx src/web.ts",
    "web:dev": "tsx watch src/web.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "update-fish-data": "./scripts/update-fish-data.sh",
    "seed-fish-db": "tsx scripts/seed-fish-db.ts",
    "update-quest-data": "tsx scripts/download-quest-data.ts && tsx scripts/parse-quest-data.ts && tsx scripts/seed-quest-db.ts",
    "seed-quest-db": "tsx scripts/seed-quest-db.ts",
    "download-csv": "tsx scripts/download-game-csv.ts",
    "seed-game-data": "tsx scripts/seed-game-data.ts"
  },
  "keywords": [
    "ffxiv",
    "final-fantasy-xiv",
    "quest",
    "crafting",
    "gathering",
    "items",
    "recipes",
    "mounts",
    "minions",
    "orchestrion",
    "assistant",
    "cli",
    "offline",
    "gaming"
  ],
  "author": "Feli.pe Oduardo Sierra",
  "license": "MIT",
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@xivapi/nodestone": "^0.2.7",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.1",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "inquirer": "^12.10.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "yn": "^5.1.0"
  }
}
