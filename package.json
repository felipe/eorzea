{
  "name": "eorzea",
  "version": "0.1.0",
  "description": "FFXIV Quest Assistant - A terminal-first quest tracking tool for casual FFXIV players",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "ffxiv",
    "final-fantasy-xiv",
    "quest",
    "assistant",
    "cli",
    "gaming"
